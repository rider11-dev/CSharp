<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>imagecutter</title>
</head>
<body>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<script src="~/Jcrop-1902/js/jquery.min.js"></script>*@
    <link href="~/bootstrap-fileinput-4.3.4/css/fileinput.min.css" rel="stylesheet" />
    <link href="~/Jcrop-1902/css/jquery.Jcrop.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/bootstrap-fileinput-4.3.4/js/fileinput.min.js"></script>
    <script src="~/bootstrap-fileinput-4.3.4/js/locales/zh.js"></script>
    <script src="~/Jcrop-1902/js/jquery.Jcrop.min.js"></script>
    <script src="~/Scripts/Index.js"></script>
    <script src="~/Scripts/FileUpload.js"></script>
    <script src="~/Scripts/ImageCrop.js"></script>

    <style>
        #preview-container {
            width: 100px;
            height: 100px;
            overflow: hidden;
        }
    </style>

    <div>
        <div id="src-container" style="width: 300px; height: 300px; float: left;">
            <img src="~/Content/blank.jpg" alt="原始图片" id="img-headSrc" style="width: 100%; height: 100%;" />
        </div>
        <div style="float: left;">
            <div id="preview-container" style="margin-top: 200px; margin-left: 2px;">
                <img src="~/Content/blank.jpg" id="img-headPreview" alt="头像预览" />
            </div>
        </div>
    </div>
    <div style="clear:both"></div>

    <div>
        <button id="btn_uploadFile" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-import" aria-hidden="true"></span>选择图片
        </button>
        <button id="btn_uploadHead" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-export" aria-hidden="true"></span>上传头像
        </button>
    </div>

    <form>
        <div class="modal fade" id="modal_UploadFile" tabindex="-1" role="dialog" aria-labelledby="modalLabel_UploadFile">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="modalLabel_UploadFile">请选择图片</h4>
                    </div>
                    <div class="modal-body">
                        <input type="file" name="input_uploadFile" id="input_uploadFile" class="file-loading" />
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script>
        $(function () {
            index.init();
        });
    </script>
</body>
</html>
